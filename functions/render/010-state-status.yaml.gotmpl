# code: language=yaml
#
# Compute status values from observed state
#

{{- $g := $state.goldilocks }}
{{- $obs := $state.observed }}

# ==============================================================================
# Compute status output
# ==============================================================================

{{- $helmReady := $obs.helmRelease.ready | default false }}
{{- $ready := $helmReady }}

{{- $state = set $state "status" (dict
  "ready" $ready
  "release" (dict
    "name" $g.releaseName
    "namespace" $g.namespace
    "ready" $helmReady
  )
) }}
